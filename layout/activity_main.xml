<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoverde"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_title_main"
        style="@style/TextStyleTitles"
        android:layout_marginTop="120dp"
        android:text="@string/txt_title_main" />

    <Button
        android:id="@+id/btn_login_main"
        style="@style/ButtonsStyle"
        android:layout_marginTop="120dp"
        android:text="@string/btn_login_main" />

    <Button
        android:id="@+id/btn_login_face_main"
        style="@style/ButtonsStyle"
        android:text="@string/btn_login_face_main" />

</LinearLayout>